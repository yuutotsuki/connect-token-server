{
  "compilerOptions": {
    "target": "es2020",                  // ← es2016 → es2020 にするのが最近の主流
    "module": "NodeNext",
    "rootDir": "./",                     // 明示的にルート指定（今の構成なら ./ でOK）
    "outDir": "dist",                    // 出力先を明確に（Render等で便利）
    "moduleResolution": "node16",  // ←★ここが追加！
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
