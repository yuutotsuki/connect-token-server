PIPEDREAM_CLIENT_ID=<your-oauth-client-id>
PIPEDREAM_CLIENT_SECRET=<your-oauth-client-secret>
PIPEDREAM_PROJECT_ID=<your-project-id>
PIPEDREAM_PROJECT_ENVIRONMENT=development
PIPEDREAM_ENVIRONMENT=development

# External User ID　メールアドレス（アカウント）毎に作成する。許可したアプリの一覧。
PIPEDREAM_EXTERNAL_USER_ID=xxxxxx

#将来的に別のオリジンを追加したい時は右記のようにカンマで区切って修正　ALLOWED_ORIGINS=http://localhost:3000,https://example.com
ALLOWED_ORIGINS=http://localhost:3000

# Google OAuth2 (for refresh_token flow)
GOOGLE_CLIENT_ID=<your-google-oauth-client-id>
GOOGLE_CLIENT_SECRET=<your-google-oauth-client-secret>
GOOGLE_REFRESH_TOKEN=<your-google-refresh-token>

# Gmail Access Token endpoint settings
# - API key auth header/value used by callers (e.g. Slack bot)
GMAIL_TOKEN_AUTH_HEADER=Authorization
GMAIL_TOKEN_API_KEY=<set-at-deploy>
# - Allowed scopes and server-side timeout/rate-limit
GMAIL_ALLOWED_SCOPES=https://www.googleapis.com/auth/gmail.readonly
GMAIL_TOKEN_TIMEOUT_MS=6000
GMAIL_TOKEN_RATE_MAX=60

# Optional: server port (default 3001)
# PORT=3001
